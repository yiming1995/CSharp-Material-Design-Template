<UserControl x:Class="AIOBOT.SetTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIOBOT"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100" Width="68" Height="30">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="hour" Width="20" Text="00" Foreground="#dddddd" FontSize="15" PreviewMouseWheel="hour_PreviewMouseWheel" MaxLength="2" TextChanged="hour_TextChanged"/>
            <TextBlock Width="3" Text=":" Foreground="#dddddd" FontSize="15" Margin="0,3,0,0"/>
            <TextBox x:Name="minute" Width="20" Text="00" Foreground="#dddddd" FontSize="15" PreviewMouseWheel="minute_PreviewMouseWheel" MaxLength="2" TextChanged="minute_TextChanged"/>
            <TextBlock Width="3" Text=":" Foreground="#dddddd" FontSize="15" Margin="0,3,0,0"/>
            <TextBox x:Name="second" Width="20" Text="00" Foreground="#dddddd" FontSize="15" PreviewMouseWheel="second_PreviewMouseWheel" MaxLength="2" TextChanged="second_TextChanged"/>
        </StackPanel>
    </Grid>
</UserControl>
